# PharmaAssist AI Backend Configuration

# LLM Provider: "gemini" (default) or "openai"
LLM_PROVIDER=gemini

# Google Gemini API Key (get free at https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (alternative - https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# Database
DATABASE_URL=sqlite+aiosqlite:///./pharmaassist.db

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Agent Configuration
MAX_AGENT_STEPS=10
AGENT_TIMEOUT=120

# Model Configuration (optional - defaults are fine)
GEMINI_MODEL=gemini-1.5-flash
OPENAI_MODEL=gpt-4o-mini
EMBEDDING_MODEL=models/embedding-001
